<Window x:Class="Database_Frontend.EditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redigera Projekt" Height="300" Width="400">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Projekt Namn:"/>
            <TextBox Text="{Binding SelectedProject.ProjectName, Mode=TwoWay}" Margin="0,5,0,10"/>

            <TextBlock Text="Status:"/>
            <TextBox Text="{Binding SelectedProject.ProjectStatus, Mode=TwoWay}" Margin="0,5,0,10"/>

            <TextBlock Text="Startdatum:"/>
            <DatePicker SelectedDate="{Binding SelectedProject.StartDate, Mode=TwoWay}" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Spara" Command="{Binding SaveProjectCommand}" Margin="5"/>
                <Button Content="Avbryt" Click="CloseWindow" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
