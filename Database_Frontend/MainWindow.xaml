<Window x:Class="Database_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Database_Frontend.ViewModels"
        Title="Project Management" Height="600" Width="900"
        Background="#ECEFF1" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <DockPanel LastChildFill="True">
            <!-- Sidomeny -->
            <StackPanel DockPanel.Dock="Left" Background="#37474F" Width="220" Height="Auto">
                <TextBlock Text="Project Manager" Foreground="White" FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>
            </StackPanel>

            <!-- Huvudinnehåll -->
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Project List" FontSize="25" FontWeight="Bold" Margin="0,0,0,15" Foreground="#263238"/>

                <!-- Projekt-tabell -->
                <DataGrid x:Name="ProjectDataGrid"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Projects}" 
                          SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserResizeColumns="True"
                          RowHeight="40"
                          Background="White"
                          BorderBrush="#B0BEC5"
                          FontSize="14"
                          HorizontalGridLinesBrush="#CFD8DC"
                          VerticalGridLinesBrush="#CFD8DC" >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Projekt" Binding="{Binding ProjectName}" Width="150"/>
                        <DataGridTextColumn Header="ProjektNummer" Binding="{Binding ProjectId}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusName}" Width="150"/>
                        <DataGridTextColumn Header="Startdatum" Binding="{Binding StartDate}" Width="150"/>
                        <DataGridTextColumn Header="Product" Binding="{Binding EmployeeEmail}" Width="150" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Knappar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Lägg till" Margin="5" Padding="10,6" 
                            Background="#03A9F4" Foreground="White" FontSize="14" FontWeight="Bold" Width="120"
                            BorderBrush="Transparent" Cursor="Hand" Click="OpenAddProjectWindow_Click"/>

                    <Button Content="Redigera" Margin="5" Padding="10,6" Command="{Binding EditProjectCommand}" 
                            Background="#03A9F4" Foreground="White" FontSize="14" FontWeight="Bold" Width="120"
                            BorderBrush="Transparent" Cursor="Hand"/>

                    <Button Content="Uppdatera" Margin="5" Padding="10,6" Command="{Binding UpdateProjectCommand}" 
                            Background="#03A9F4" Foreground="White" FontSize="14" FontWeight="Bold" Width="120"
                            BorderBrush="Transparent" Cursor="Hand"/>

                    <Button Content="Ta bort" Margin="5" Padding="10,6" Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedItem, ElementName=ProjectDataGrid}"
                            Background="#03A9F4" Foreground="White" FontSize="14" FontWeight="Bold" Width="120"
                            BorderBrush="Transparent" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
